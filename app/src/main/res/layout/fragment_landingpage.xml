<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v4.view.ViewPager
            android:id="@+id/add_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:padding="12dp">

            <View
                android:id="@+id/indic1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/white_circle" />

            <View
                android:id="@+id/indic2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/white_circle_alpha" />

            <View
                android:id="@+id/indic3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/white_circle_alpha" />

            <View
                android:id="@+id/indic4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/white_circle_alpha" />

            <View
                android:id="@+id/indic5"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/white_circle_alpha" />

            <View
                android:id="@+id/indic6"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/white_circle_alpha" />

            <View
                android:id="@+id/indic7"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/white_circle_alpha" />

            <View
                android:id="@+id/indic8"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/white_circle_alpha" />

            <View
                android:id="@+id/indic9"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/white_circle_alpha" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:weightSum="2">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="4dp">

            <RelativeLayout
                android:id="@+id/class_test"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/default_selector"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/txt2"
                    android:padding="12dp"
                    android:src="@drawable/ic_action_spellcheck" />

                <app.tutor.com.tutorapps.customview.RobotoMediam
                    android:id="@+id/txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="CLASS TEST"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="4dp">

            <RelativeLayout
                android:id="@+id/mock_test"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/default_selector"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/txt1"
                    android:padding="12dp"
                    android:src="@drawable/ic_action_mock_test" />

                <app.tutor.com.tutorapps.customview.RobotoMediam
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="MOCK TEST"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:weightSum="2">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="4dp">

            <RelativeLayout
                android:id="@+id/my_report"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/default_selector"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/txt3"
                    android:padding="12dp"
                    android:src="@drawable/ic_action_report" />

                <app.tutor.com.tutorapps.customview.RobotoMediam
                    android:id="@+id/txt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="MY REPORT"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="4dp">

            <RelativeLayout
                android:id="@+id/study_met"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/default_selector"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/txt4"
                    android:padding="12dp"
                    android:src="@drawable/ic_action_study_material" />

                <app.tutor.com.tutorapps.customview.RobotoMediam
                    android:id="@+id/txt4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="STUDY MATERIAL"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>


</LinearLayout>
